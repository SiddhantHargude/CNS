#include <iostream>
#include <cstdio>
using namespace std;

struct node {
    int dist[20];
    int from[20];
} route[10];

int main() {
    int dm[20][20], no;

    cout << "Enter number of nodes: ";
    cin >> no;

    cout << "Enter the distance matrix (use 999 for infinity):" << endl;
    for (int i = 0; i < no; i++) {
        for (int j = 0; j < no; j++) {
            cin >> dm[i][j];
            if (i == j)
                dm[i][j] = 0;  // distance to itself = 0

            route[i].dist[j] = dm[i][j];
            route[i].from[j] = j;
        }
    }

    int updated;
    do {
        updated = 0;
        for (int i = 0; i < no; i++) {
            for (int j = 0; j < no; j++) {
                for (int k = 0; k < no; k++) {
                    // Bellman-Ford relaxation step
                    if (route[i].dist[j] > dm[i][k] + route[k].dist[j]) {
                        route[i].dist[j] = dm[i][k] + route[k].dist[j];
                        route[i].from[j] = k;
                        updated = 1;
                    }
                }
            }
        }
    } while (updated);

    cout << "\n--- Routing Table ---\n";
    for (int i = 0; i < no; i++) {
        cout << "\nRouter info for Router " << i + 1 << ":\n";
        cout << "Destination\tNext Hop\tDistance\n";
        for (int j = 0; j < no; j++) {
            cout << j + 1 << "\t\t" << route[i].from[j] + 1 << "\t\t" << route[i].dist[j] << endl;
        }
    }

    return 0;
}
